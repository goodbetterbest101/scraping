			 	dataType: 'json',
    			//contentType: "application/json; charset=utf-8",			 	
    			data: JSON.stringify(data_content),
			 	success: function(data){
			 		callback(data.result[0].token);
			 	}
			 });
			 
		}
		function initialize(lat,lng, link_pin) {
			$('#map').html('');
			//console.log(link_pin);
			map = new nostra.maps.Map("map", {
			    id: "mapTest",
			    logo: false,
			    scalebar: false,
			    basemap: "streetmap",
			    slider: true,
			    level: 15,
			    lat: lat,
			    lon: lng,
			    country: "TH"
			});
			maker_layer = new nostra.maps.layers.GraphicsLayer(map, { id: "maker_layer" });

			map.addLayer(maker_layer);

			map.onLayerAddComplete = function () {
		        if (!isFirstLoad) {
		            hideLoading();
		        }
		        var nostraCallout = new nostra.maps.Callout({ title: " ภูทอก ", content: "<a href='"+link_pin+"' target='_blank'>แสดงแผนที่</a>" });
				var pointMarker = new nostra.maps.symbols.Marker({ url: "https://thai.tourismthailand.org/images/global/pin-01.png", width: 18, height: 31, attributes: { }, callout: nostraCallout });
		
			maker_layer.addMarker(lat,lng, pointMarker);
		
		    };
			map.events.load = function () {
			   hideLoading();
			   isFirstLoad = false;
			   $('.esriControlsBR').remove();
